<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.LoginActivity"
    android:background="@color/background_gpd">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/titleLLayout"
            android:layout_width="match_parent"
            android:layout_height="295dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="344dp"
                android:layout_height="236dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/gpd" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/inputLLayout"
            android:layout_width="272dp"
            android:layout_height="235dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Ingrese su correo para enviarle un link de recuperacion"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Correo"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_margin="10dp"
                android:autofillHints=""
                android:background="@drawable/border"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <Button
                android:id="@+id/btnRecuperar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button_color"
                android:text="ENVIAR" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/footerLLayout"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtRegistrarse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/register"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtRegresarLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/regresar_login"
                android:textAlignment="center"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>